<script>
  var h = 1 , m = 1 , s = 1 ;
  
  function init(){
    s = <%= Time.now.sec %> ;
    m = <%= Time.now.min %> ;
    h = <%= Time.now.hour %> ;
    initRessources();
    updateTime();
  }
  
  function updateTime(){
    s++;
    if (s == 60 ){
      s = 0;
      m++;
    }
    if (m == 60){
      m = 0 ;
      h++;
    }
    
    if ( h == 24){
      h = 1;
    }
    document.getElementById("ur").innerHTML = h + ":" + m + ":" + s;
    setTimeout("updateTime()" , 1000);
  }
  
  
</script>